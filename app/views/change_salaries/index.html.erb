<p id="notice"><%= notice %></p>

<h1>Change Salaries</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Collaborator</th>
      <th>Cost center</th>
      <th>Salary current</th>
      <th>New salary</th>
      <th>Date change</th>
      <th>Reason change</th>
      <th>User</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @change_salaries.each do |change_salary| %>
      <tr>
        <td><%= change_salary.company %></td>
        <td><%= change_salary.collaborator %></td>
        <td><%= change_salary.cost_center %></td>
        <td><%= change_salary.salary_current %></td>
        <td><%= change_salary.new_salary %></td>
        <td><%= change_salary.date_change %></td>
        <td><%= change_salary.reason_change %></td>
        <td><%= change_salary.user %></td>
        <td><%= change_salary.status %></td>
        <td><%= link_to 'Show', change_salary %></td>
        <td><%= link_to 'Edit', edit_change_salary_path(change_salary) %></td>
        <td><%= link_to 'Destroy', change_salary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

